generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  account  Account?

  @@map("users")
}

model Account {
  id             String           @id @default(uuid())
  balance        Float
  user           User             @relation(fields: [userId], references: [id])
  userId         String           @unique
  accountHistory AccountHistory[]

  @@map("accounts")
}

model AccountHistory {
  id          String  @id @default(uuid())
  value       Float
  balance     Float
  description String
  account     Account @relation(fields: [accountId], references: [id])
  accountId   String

  @@map("account_history")
}
